<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.bsu.cs222.wikipediaRevisionsUI.Controller">
   <children>
      <Label text="Wikipedia Revision Viewer" />
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <HBox alignment="BOTTOM_CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label alignment="CENTER" text="Search Term" />
                        <TextField fx:id="urlField" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="6.0">
               <children>
                  <TextArea fx:id="outputField" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </HBox>
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#getRevisions" text="Get Revisions" />
   </children>
</VBox>
